{
  "roots": [
    "packages"
  ],
  "testMatch": [
    "**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**/*.ts",
    "!**/src/index.ts",
    "!**/src/index-internal.ts",
    "!**/src/errors.ts"
  ],
  "coverageReporters": [
    "text"
  ]
}