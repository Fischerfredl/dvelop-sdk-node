{
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "node": true,
    "jest/globals": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "indent": [
      "error",
      2
    ],
    "function-call-argument-newline": [
      "error",
      "never"
    ],
    "function-paren-newline": [
      "error",
      "never"
    ],
    "no-console": [
      "error"
    ],
    "no-var": "error",
    "@typescript-eslint/type-annotation-spacing": ["error", { "before": false, "after": true }]
  }
}