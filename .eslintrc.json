{
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "indent": [
      "error",
      2
    ],
    "function-call-argument-newline" : [
      "error",
      "never"
    ],
    "no-console" : [
      "error"
    ]
  }
}